extends ../layout.pug

block meta
    title #{post.title}

block content
    img(src=`/${post.image}`, alt="", srcset="", width="500")
    h1 #{post.title}
    div #{post.content}
    p By #{post.author.name}

    p Tags:
    each tag in post.tags
        li 
            a(href=`/tags/${tag.id}`) #{tag.name}

    a(href=`/posts/edit/${post.id}`) Edit this post